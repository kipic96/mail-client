<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MailClient.ViewStyle">
     
    <Style x:Key="PageButton" TargetType="Button">
        <Setter Property="Content" Value="{Binding PageName}"/>
        <Setter Property="Command" Value="{Binding DataContext.ChangePageCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
        <Setter Property="CommandParameter" Value="{Binding}"/>
        <Setter Property="Margin" Value="10,10"/>
        <Setter Property="MinWidth" Value="75"/>
    </Style>
    <Style x:Key="Border" TargetType="Border">
        <Setter Property="DockPanel.Dock" Value="Left"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
    </Style>
    <Style x:Key="LoginButton" TargetType="Button">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Content" Value="Log in"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>